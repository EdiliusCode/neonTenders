{% extends 'blogin.html.twig' %}

{% block title %}CTenders | Authentification
{% endblock %}

{% block body %}
	<!-- This is needed when you send requests via Ajax -->
	<script type="text/javascript">
		var baseurl = '';
	</script>

	<div class="login-container">

		<div class="login-header login-caret">

			<div class="login-content">

				<a href="index.html" class="logo">
					<img src="assets/images/cft.png" width="120" alt="Logo ici"/>
				</a>

				<p class="description">Utilisateur , Veuillez vous connecter!</p>

				<!-- progress bar indicator -->
				<div class="login-progressbar-indicator">
					<h3>43%</h3>
					<span>Vérification en cours...</span>
				</div>
			</div>

		</div>

		<div class="login-progressbar">
			<div></div>
		</div>

		<div class="login-form">

			<div class="login-content">

				<div class="form-login-error">
					<h3>Infomation de connexion Erroné</h3>
					<p>Veuillez
						<strong>reéssayer</strong>
						de vous connecter.</p>
				</div>

				<form method="post" role="form" id="form_login" action="#">

					<div class="form-group">

						<div class="input-group">
							<div class="input-group-addon">
								<i class="entypo-user"></i>
							</div>

							<input type="email" value="{{ last_username }}" placeholder="Votre Email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus/>
						</div>

					</div>

					<div class="form-group">

						<div class="input-group">
							<div class="input-group-addon">
								<i class="entypo-key"></i>
							</div>

							<input type="password" name="password" id="inputPassword" placeholder="Votre mot de passe"  class="form-control" autocomplete="current-password" required/>
						</div>

					</div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block btn-login login">
							<i class="entypo-login"></i>
							Connexion
						</button>
					</div>

					</form>
				<div class="login-bottom-links">
					<span><a href="#" class="link">Mot de Passe oublié?</a> </span> &emsp; | &emsp;<span><a href="{{path('app_register')}}" class="link"> Créer Un Compte </a></span>
					<br/>
					<a href="#">Edilius</a>
					-
					<a href="#">Code Lab</a>
				</div>
			</div>
		</div>
	</div>

	<script src="assets/js/jquery.validate.min.js"></script>
	<script src="assets/js/neon-login.js"></script>
{% endblock %}
